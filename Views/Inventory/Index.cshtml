@model IEnumerable<SaleItem>
@{
    ViewData["Title"] = "Inventory";
}

<h1>Inventarie</h1>

@if (!Model.Any())
{
    <p>Det finns inga föremål i inventariet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Namn</th>
                <th>Kategori</th>
                <th>Beskrivning</th>
                <th>Utgångspris</th>
                <th>Årtionde</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>@item.Description</td>
                    <td>@item.StartingPrice.ToString("C")</td>
                    <td>@item.Decade</td>
                </tr>
            }
        </tbody>
    </table>
}