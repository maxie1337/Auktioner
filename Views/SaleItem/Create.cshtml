@model SaleItem
@{
    ViewData["Title"] = "Create Item";
}

<h1>Skapa Försäljningsobjekt</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Namn</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Kategori</label>
        <input asp-for="Category" class="form-control" required />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Beskrivning</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartingPrice">Pris</label>
        <input asp-for="StartingPrice" class="form-control" step="0.01" required />
        <span asp-validation-for="StartingPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Decade">Årtionde</label>
        <input asp-for="Decade" class="form-control" required />
        <span asp-validation-for="Decade" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Skapa</button>
    <a asp-action="Index" class="btn btn-secondary">Tillbaka</a>
</form>